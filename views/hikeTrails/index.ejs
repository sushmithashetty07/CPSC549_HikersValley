  <% layout('layouts/boilerplate') %> 
    <div id="map" style="width: 100%; height: 300px"></div>
    <br>
    <form action="/hikeTrails" method="GET" class="row g-3 justify-content-center align-items-center">
      <div class="col-md-6">
        <input type="text" class="form-control" id="title" name="title" placeholder="search trail">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-success btn-block">Search</button>
      </div>
    </form>
  <br>
    <ul >
      <% if (hikeTrails.length != 0) { %>

      <% for( let trails of hikeTrails) { %>
  
      <!-- <li> <a href="hikeTrails/<%= trails._id %>"><%= trails.title %> </a> </li> -->
      <div class="card mb-3" >
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= trails.image%>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= trails.title %></h5>
              <p class="catd-text">
                <small class="text-muted">Location: <%= trails.location %></small>
              </p>
              <p class="catd-text">
                <small class="text-muted">Difficulty Level: <%= trails.difficultyLevel %> hike</small>
              </p>
              <p class="catd-text">
                <small class="text-muted">Description: <%= trails.description %></small>
              </p>
              <a class="btn btn-primary" href="/hikeTrails/<%=trails._id%>">View <%= trails.title%> </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    <% } else { %>
        
          <p class="position-absolute top-0 start-0 translate-middle"> Hike Trail not found </p>
  

        <% } %>
         
    </ul>
    <script>
      const trails = {features: <%- JSON.stringify(hikeTrails) %>};
    </script>
    <script src="/javascript/clusterMap.js"></script>
